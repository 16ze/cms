# Environment Variables Example
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="file:./prisma/prisma/dev.db"

# ============================================
# SESSION & AUTHENTICATION
# ============================================
# Secret pour les sessions admin (doit faire au moins 64 caractères pour HMAC SHA-512)
ADMIN_SESSION_SECRET="your-secret-key-here-change-in-production-minimum-64-chars-required-for-hmac-sha512-security"
# Clé de chiffrement pour refresh tokens et secrets 2FA (AES-256-GCM)
# Si non défini, utilise ADMIN_SESSION_SECRET (doit faire au moins 64 caractères)
ENCRYPTION_KEY=""
# Origines autorisées pour Super Admin (séparées par des virgules)
# Exemple: NEXT_PUBLIC_ADMIN_ALLOWED_ORIGINS=https://admin.example.com,https://secure.example.com
NEXT_PUBLIC_ADMIN_ALLOWED_ORIGINS=""

# ============================================
# SENTRY CONFIGURATION (Optional)
# ============================================
# Get your DSN from https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"
SENTRY_SAMPLE_RATE=1.0
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# ============================================
# OPEN TELEMETRY (Optional - Production only)
# ============================================
OTEL_ENABLED=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL="info"

# ============================================
# SECURITY
# ============================================
# Liste des origines autorisées pour CORS (séparées par des virgules)
# Exemple: ALLOWED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com
ALLOWED_ORIGINS=""

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV="development"

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_SERVER="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER=""
EMAIL_PASSWORD=""
EMAIL_FROM=""
ADMIN_EMAIL=""

# ============================================
# RATE LIMITING (Optional - Redis)
# ============================================
# Pour utiliser Redis pour le rate limiting distribué
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""

